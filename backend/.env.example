# ========== 基础配置 ==========
ENVIRONMENT=development
SECRET_KEY=change_this_to_a_secure_random_string
DEBUG=True

# ========== 数据库 ==========
# 开发环境 (SQLite): sqlite:////absolute/path/to/sql_app.db
# 生产环境 (PostgreSQL): postgresql://user:password@localhost:5432/dbname
DATABASE_URL=sqlite:///./sql_app.db

# ========== AI 服务 Keys (按需填入) ==========
DOUBAO_API_KEY=
OPENAI_API_KEY=
BAIDU_API_KEY=
AI_PROVIDER=doubao

# ========== 存储配置 ==========
# 默认 local, 生产环境建议 ali_oss / s3
STORAGE_TYPE=local

# 阿里云 OSS 配置 (当 STORAGE_TYPE=ali_oss 时生效)
# ALIYUN_ACCESS_KEY_ID=
# ALIYUN_ACCESS_KEY_SECRET=
# OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
# OSS_BUCKET_NAME=modelai-assets